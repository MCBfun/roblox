local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local localPlayer = Players.LocalPlayer
local StarterGui = game:GetService("StarterGui")

-- é»‘åå•åˆ—è¡¨
local BlackList = {
    "yuku65t4",
    "ğŸ˜‹"
}

-- æƒ©ç½šç›¸å…³èµ„æºé…ç½®
local PunishSoundId = "rbxassetid://72089843969979" -- ç‚¸éº¦æƒ©ç½šéŸ³æ•ˆ
local KickNote = "ä¸æ˜¯ä½ é…ç”¨å—ï¼ŸğŸ˜‚ğŸ‘‰ğŸ¤¡" -- ç»Ÿä¸€è¸¢å‡ºå¤‡æ³¨
local PunishTime = 6 -- æƒ©ç½šå€’è®¡æ—¶ï¼ˆç§’ï¼‰

-- å…¨å±çº¢å±åˆ›å»ºå‡½æ•°
local function createFullRedScreen()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "PunishRedScreen"
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.DisplayOrder = 9999 -- å±‚çº§æœ€é«˜ï¼Œé“ºæ»¡å…¨å±
    ScreenGui.Parent = localPlayer.PlayerGui

    local RedFrame = Instance.new("Frame")
    RedFrame.Size = UDim2.new(1, 0, 1, 0)
    RedFrame.Position = UDim2.new(0, 0, 0, 0)
    RedFrame.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    RedFrame.BackgroundTransparency = 0
    RedFrame.BorderSizePixel = 0
    RedFrame.Parent = ScreenGui
    return ScreenGui
end

-- é»‘åå•éªŒè¯+æƒ©ç½šå‡½æ•°
local function BlackListCheck()
    local playerName = localPlayer.Name
    -- æ£€æµ‹æ˜¯å¦åœ¨é»‘åå•
    for _, bannedName in ipairs(BlackList) do
        if playerName == bannedName then
            -- 1. æ’­æ”¾ç‚¸éº¦æƒ©ç½šéŸ³æ•ˆ
            local punishSound = Instance.new("Sound")
            punishSound.SoundId = PunishSoundId
            punishSound.Volume = 1 -- æ‹‰æ»¡éŸ³é‡å®ç°ç‚¸éº¦æ•ˆæœ
            punishSound.Looped = true
            punishSound.Parent = workspace
            punishSound:Play()

            -- 2. å…¨å±çº¢å±
            local redScreen = createFullRedScreen()

            -- 3. 3ç§’å€’è®¡æ—¶åè¸¢å‡º
            task.wait(PunishTime)
            punishSound:Stop()
            punishSound:Destroy()
            redScreen:Destroy()
            localPlayer:Kick(KickNote)
            return true
        end
    end
    return false
end

-- æ‰§è¡ŒéªŒè¯ï¼Œé»‘åå•ç›´æ¥è§¦å‘æƒ©ç½šæµç¨‹
if BlackListCheck() then
    return
end

