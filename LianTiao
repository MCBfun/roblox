    Icon = "rbxassetid://111333374680640",
    Duration = 8,
    Position = UDim2.new(0, 20, 1, -50)
})
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "重大更新!",
    Text = "更新跳跃时下坠动作",
    Icon = "rbxassetid://6524375813", -- 选：图标ID（这里用个示例笑脸图标）
    Duration = 8, -- 显示时长（秒）
    Position = UDim2.new(0, 20, 1, -50) -- 定位到左下角
})
