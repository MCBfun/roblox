                ["Possessed"] = "惊吓",
            }
            
            local player = game.Players.LocalPlayer
            
            local function localizeObjects(parent)
                for _, child in pairs(parent:GetChildren()) do
                    if child:IsA("TextLabel") or child:IsA("TextButton") or child:IsA("TextBox") then
                        local originalText = child.Text
                        
                        for english, chinese in pairs(translationMap) do
                            if originalText == english then
                                child.Text = chinese
                                break
                            elseif originalText:find(english) then
                                child.Text = originalText:gsub(english, chinese)
                                break
                            end
                        end
                    end
                    
                    localizeObjects(child)
                end
            end
            
            local guis = {
                player:WaitForChild("PlayerGui"),
                game:GetService("CoreGui")
            }
            
            for _, gui in pairs(guis) do
                localizeObjects(gui)
            end
        end
        
        applyChineseLocalization()
        
        spawn(function()
            while true do
                wait(1)
                applyChineseLocalization()
            end
        end)
    end
end